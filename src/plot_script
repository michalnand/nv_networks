set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto


#set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
#set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

set yrange [-1.1:1.1]

set terminal png size 1024,768 enhanced font "Helvetica,20"

set key left bottom


set xlabel "iteration"
set ylabel "neuron output"

set output 'master_slave_bicore.png'
plot 'log.txt' using 1:2 title 'NV0'  with lines lw 2.0, \
     'log.txt' using 1:3 title 'NV1'  with lines lw 2.0, \
     'log.txt' using 1:(0.5*$4) title 'NU0'  with lines lw 2.0, \
     'log.txt' using 1:(0.5*$5) title 'NU1'  with lines lw 2.0


set output 'master_slave_bicore_rc.png'
 plot 'log.txt' using 1:6 title 'NV0'  with lines lw 2.0, \
      'log.txt' using 1:7 title 'NV1'  with lines lw 2.0, \
      'log.txt' using 1:8 title 'NU0'  with lines lw 2.0, \
      'log.txt' using 1:9 title 'NU1'  with lines lw 2.0
